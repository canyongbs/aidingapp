includes:
    - ./vendor/larastan/larastan/extension.neon
    - ./vendor/tpetry/laravel-postgresql-enhanced/phpstan-extension.neon
    - phpstan-baseline.php

parameters:

    paths:
        - app/
        - app-modules/
        - database/
        - tests/
        - routes/

    excludePaths:
        - app-modules/*/vendor/*

    scanFiles:
        - ./_ide_helper_models.php

    # Level 9 is the highest level
    level: 6
